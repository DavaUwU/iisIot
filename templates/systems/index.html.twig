{% extends 'base.html.twig' %}

{% block title %}Hello SystemsController!{% endblock %}

{% block body %}
<style>
    h2 {
        padding-left: 10px;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #e9ecef;
    }
</style>

    <h2>My Systems</h2>

    <table>
        <thead>
        <tr>
            <th>System Name</th>
            <th>Description</th>
            <th>Owner</th>
        </tr>
        </thead>
        <tbody>
        {% for system in systems %}
            <tr>
                <td>{{ system.name }}</td>
                <td>{{ system.description }}</td>
                <td>{{ system.owner.username }}</td> {# Replace with the correct property if needed #}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No systems found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
